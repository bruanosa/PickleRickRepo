<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="SCORE: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/scoreValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#030303" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00F5F5F5"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="onPauseButtonClicked"
            app:srcCompat="@drawable/pause_icon" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sewer_img"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewPickleRick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/prresized" />

        <ImageView
            android:id="@+id/smallRat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            app:srcCompat="@drawable/smallrat" />

        <ImageView
            android:id="@+id/smallRat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            app:srcCompat="@drawable/smallrat" />

        <ImageView
            android:id="@+id/smallRat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            app:srcCompat="@drawable/smallrat" />

        <ImageView
            android:id="@+id/bigRat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="9dp"
            app:srcCompat="@drawable/bigrat" />

        <ImageView
            android:id="@+id/bigRat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="9dp"
            app:srcCompat="@drawable/bigrat" />

        <TextView
            android:id="@+id/touch2startTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/iceberg"
            android:text="Touch Anywhere To Start"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </FrameLayout>

</LinearLayout>