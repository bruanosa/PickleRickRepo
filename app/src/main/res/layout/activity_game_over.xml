<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:foregroundTint="#0000BCD4"
    android:translationZ="0dp"
    tools:context=".GameOver">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/iceberg"
        android:text="GAME OVER"
        android:textColor="#DA0D0D"
        android:textSize="36sp"
        android:translationZ="10dp" />

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/iceberg"
        android:onClick="onTryAgain"
        android:text="Try Again"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/highScoreGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/iceberg"
        android:text="Your HighScore"
        android:textColor="#4AF160"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/highScoreValueGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreGO"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="#4AF160"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/yourScoreGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreValueGO"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/iceberg"
        android:text="Your Score"
        android:textColor="#4AF160"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/yourScoreValueGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourScoreGO"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="#4AF160"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/yourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourScoreValueGO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/iceberg"
        android:text="Your Name?"
        android:textColor="#4AF160"
        android:textSize="40sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/yourNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yourName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColorHint="#4AF160"
        android:hint="ABC"
        android:textColor="#4AF160"
        android:textSize="36sp"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLength="3"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="217dp"
        android:layout_height="214dp"
        android:layout_below="@id/yourNameInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/screaming_sun_smaller" />

</RelativeLayout>